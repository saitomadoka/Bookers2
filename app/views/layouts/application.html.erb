<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap & FontAwesome CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/5007e924e2.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark px-4 py-2">
      <div class="container-fluid">
        <%= link_to "Bookers", root_path, class: "navbar-brand text-white" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user), class: "nav-link text-white" do %>
                  <i class="fas fa-home me-1"></i> Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: "nav-link text-white" do %>
                  <i class="fas fa-users me-1"></i> Users
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path, class: "nav-link text-white" do %>
                  <i class="fas fa-book me-1"></i> Books
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
                  <i class="fas fa-sign-out-alt me-1"></i> Logout
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link text-white" do %>
                  <i class="fas fa-home me-1"></i> Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to home_about_path, class: "nav-link text-white" do %>
                  <i class="fas fa-link me-1"></i> About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
                  <i class="fas fa-user-plus me-1"></i> Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link text-white" do %>
                  <i class="fas fa-sign-in-alt me-1"></i> Login
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>

    <main class="container mt-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </main>

    <footer>
      <div class="container text-center mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
