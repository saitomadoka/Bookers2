<h1>Editing Book</h1>

<%= form_with model: @book, local: true do |f| %>


  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :opinion %>
    <%= f.text_area :opinion, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Update Book", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book), class: "me-2" %> |
<%= link_to 'Back', books_path %>
