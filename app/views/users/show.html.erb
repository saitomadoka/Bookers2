<div class="row">
  <!-- 左：ユーザー情報 + 投稿フォーム -->
  <div class="col-md-3">
    <h3>User info</h3>
    <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image.variant(resize: "100x100") %>
    <% else %>
      <%= image_tag 'no_image.jpg', width: 100 %>
    <% end %>
    <table class="table">
      <tr><th>name</th><td><%= @user.name %></td></tr>
      <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
    </table>

    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>

    <h4>New Book</h4>
    <%= form_with model: @book, local: true do |f| %>
      <div class="mb-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.submit "Create Book", class: "btn btn-primary w-100" %>
    <% end %>
  </div>

  <!-- 右：投稿詳細 -->
  <div class="col-9">
    <h1>Book detail</h1>
    <table class="table table-user-show">
      <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <% if book.user.profile_image.attached? %>
                <%= image_tag book.user.profile_image.variant(resize: "50x50") %>
              <% else %>
                <%= image_tag "no_image.jpg", width: 50, height: 50 %>
              <% end %>
            <% end %>
          </td>
        
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
